            <!--CarouselView-->
            <CarouselView
                BackgroundColor="Transparent"
                x:Name="csView"
                Position="{Binding Position}"
                Grid.Row="1"
                IsSwipeEnabled="True">
                <CarouselView.GestureRecognizers>
                    <SwipeGestureRecognizer
                        Direction="Right"
                        Command="{Binding SwipeRight}"
                        CommandParameter="{Binding .}" />
                    <SwipeGestureRecognizer
                        Direction="Left"
                        Command="{Binding SwipeLeft}"
                        CommandParameter="{Binding .}" />
                </CarouselView.GestureRecognizers>
