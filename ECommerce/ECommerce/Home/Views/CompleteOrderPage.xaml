                <ColumnDefinition
                    Width="0" />
                <ColumnDefinition
                    Width="*" />
                <ColumnDefinition
                    Width="44" />
            </Grid.ColumnDefinitions>
            <Label
                Grid.Column="1"
                Text="Complete Order"
                TextColor="White"
                VerticalOptions="Center"
                FontSize="18"
                HorizontalOptions="Center" />
            <Button
                BackgroundColor="Transparent"
                Grid.Column="2"
                Command="{Binding TapNext}"
                Text="Next"
                TextColor="White" />
        </Grid>
    </NavigationPage.TitleView>
